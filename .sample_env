# Choose your transcription provider (openai, google or mlx)
UTTERTYPE_PROVIDER="openai"

# ===== OpenAI Whisper API Settings =====
# Uncomment and configure for OpenAI Whisper API:
OPENAI_API_KEY="sk-<your_key_here>"
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL_NAME="whisper-1"

# ===== Apple MLX Whisper Settings =====
# Uncomment and configure for local Whisper MLX (Apple Silicon only):
# UTTERTYPE_PROVIDER="mlx"
# MLX_MODEL_NAME="distil-medium.en"
# HF_TOKEN="your-huggingface-token"  # Required to download models from HuggingFace

# ===== Google Gemini API Settings =====
# Uncomment and configure for Google Gemini API:
# GEMINI_API_KEY="<your_api_key_here>"
# GEMINI_MODEL_NAME="gemini-2.0-flash"
# GEMINI_USE_CONTEXT_SCREENSHOT="false"  # Set to "true" to include screenshots (macOS only)

# ===== Google Vertex AI Settings =====
# Uncomment and configure for Google Vertex AI:
# GEMINI_USE_VERTEX="true"
# GEMINI_PROJECT_ID="<your_project_id>"
# GEMINI_LOCATION="us-central1"
# GEMINI_MODEL_NAME="gemini-2.0-flash"
# GEMINI_USE_CONTEXT_SCREENSHOT="false"  # Set to "true" to include screenshots (macOS only)

# UTTERTYPE_RECORD_HOTKEYS="<ctrl>+<alt>+v" # defaults to <globe> on Mac, <ctrl>+<alt>+v otherwise
# See https://pynput.readthedocs.io/en/latest/keyboard.html#global-hotkeys for other options

# Minimum recording duration in milliseconds (default: 300)
# Recordings shorter than this will be ignored, useful for preventing
# accidental transcriptions from quick hotkey presses
# UTTERTYPE_MIN_RECORDING_MS=300
